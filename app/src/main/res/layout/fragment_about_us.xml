<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="#ffffff"
    android:layout_width="match_parent">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/joey"
        android:layout_marginTop="100dp"
        android:id="@+id/dev_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro"
        android:textSize="21sp"
        android:gravity="center"
        android:text="This app is made by Rishabh Aren as part of Internshala's Android Training Project."
        android:layout_below="@+id/dev_image"
        android:padding="20dp"
        android:textColor="#818181"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:layout_centerHorizontal="true"
        android:text="App Version : 1.0"
        android:layout_below="@+id/intro"
        android:textColor="#818181"/>
</RelativeLayout>